{
  "name": "svelte-webpack",
  "version": "1.0.0",
  "description": "A simple Svelte app made using Webpack",
  "main": "index.js",
  "scripts": {
    "delete:build": "rimraf build",
    "prebuild": "npm run delete:build",
    "start": "cross-env NODE_ENV=development webpack-dev-server",
    "build": "cross-env NODE_ENV=production webpack"
  },
  "keywords": [
    "svelte3",
    "routing",
    "webpack4"
  ],
  "author": "Ryan Dsouza",
  "license": "ISC",
  "devDependencies": {
    "critters-webpack-plugin": "^2.3.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "dotenv-webpack": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.4",
    "lint-staged": "^8.2.0",
    "mini-css-extract-plugin": "^0.7.0",
    "preload-webpack-plugin": "^3.0.0-beta.3",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "style-loader": "^1.0.0",
    "svelte": "^3.9.1",
    "svelte-loadable": "^1.1.0",
    "svelte-loader": "^2.13.4",
    "svelte-routing": "^1.2.0",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.3",
    "webpack-dev-server": "^3.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
