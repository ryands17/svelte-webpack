{
  "name": "svelte-electron",
  "version": "1.0.0",
  "homepage": "/",
  "author": {
    "name": "Ryan Dsouza",
    "email": "dsouza.ryan.11@gmail.com"
  },
  "description": "A simple Electron Svelte app with Snowpack",
  "main": "main/electron.js",
  "scripts": {
    "start": "snowpack dev",
    "elect:dev": "wait-on http://localhost:8080 && electron .",
    "build": "snowpack build",
    "electron:build": "electron-builder build -l",
    "clean": "rimraf build dist",
    "lint": "eslint '{src,main}/**/*.{js,ts}'",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage --max-workers=2",
    "dev": "run-p start elect:dev",
    "prod": "run-s clean build electron:*"
  },
  "keywords": [
    "svelte3",
    "electron"
  ],
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "express": "^4.17.1",
    "svelte": "^3.21.0",
    "wait-on": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@snowpack/app-scripts-svelte": "^1.2.0",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/svelte": "^3.0.0",
    "@types/express": "^4.17.6",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "electron": "^9.4.0",
    "electron-builder": "22.7.0",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": ">=4",
    "jest": "^26.0.1",
    "lint-staged": ">=10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "snowpack": "^2.5.0",
    "typescript": "^3.9.5"
  },
  "build": {
    "productName": "Sveltectron",
    "appId": "com.ryan.sveltectron",
    "files": [
      "node_modules/**/*",
      "main/**/*",
      "build/**/*",
      "package.json"
    ],
    "asar": false,
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "deleteAppDataOnUninstall": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Internet"
    }
  },
  "browserslist": [
    "last 2 chrome versions"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "npm run lint",
    "*.{js,css,md}": "prettier --write"
  }
}
